<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </header>
    <div>
        <table style="border-spacing:15px">
            <tr>
                <td colspan="3">
                    <select name="data.type">
                        {{#select data.data.type}}
                        {{#each config.miscItems as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
            </tr>
            {{#if (eq data.data.type "vocation")}}
            {{> "modules/extCogent/templates/partials/character/vocation-sheet.hbs"}}
            {{/if}}
            {{#if (eq data.data.type "item")}}
            <tr>
                <td>{{localize "cogent.amount"}}:</td>
                <td>
                    <span>
                        <input name="data.count" type="number" value="{{data.data.count}}" data-dtype="Number" /> 
                    </span>  
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <textarea name="data.description">{{data.data.description}}</textarea>
                </td>
            </tr>
            {{/if}}
        </table>
    </div>
</form>
